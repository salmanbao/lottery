{
  "name": "Lottery",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npx hardhat compile",
    "test": "npx hardhat test",
    "clean": "rm -rf artifacts && rm -rf cache && rm -rf coverage && rm -rf coverage.json && rm -rf .solcover.js && rm -rf yarn.lock",
    "cover": "npx hardhat coverage",
    "flatten": "hardhat flatten ./contracts/SafemoonLottery.sol > ./Safemoon.sol",
    "verify": "hardhat verify --constructor-args scripts/params.js 0xeA7556dD96Abd76215d0A74D36Ae58687013B06D --network bsc",
    "verify:rng": "hardhat verify --constructor-args scripts/rng.js 0x026D2cADa52aDAc907de2aA51d1e59D7b7AD2cfb --network bsc",
    "deploy:local": "hardhat run scripts/deploy.js --network"
  },
  "dependencies": {
    "@chainlink/contracts": "0.2.2",
    "@nomiclabs/hardhat-ethers": "2.0.1",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "4.3.2",
    "@pancakeswap/pancake-swap-lib": "0.0.4",
    "bignumber.js": "9.0.1",
    "chai": "4.3.0",
    "dotenv": "8.2.0",
    "ethereum-waffle": "3.2.2",
    "ethers": "5.0.31",
    "hardhat": "2.0.11",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-watcher": "^2.1.1",
    "solidity-coverage": "0.7.16"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.7"
  }
}
